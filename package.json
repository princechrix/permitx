{
  "name": "permit-x",
  "version": "1.0.0",
  "type": "module",
  "description": "A lightweight React permission management library with RBAC and permission-based access control",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "permissions",
    "rbac",
    "access-control",
    "authorization",
    "typescript",
    "nextjs"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "next": ">=12.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^27.0.0",
    "next": "^14.0.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }, 
  "repository": {
    "type": "git",
    "url": "git+https://github.com/princechrix/permitx.git"
  },
  "bugs": {
    "url": "https://github.com/princechrix/permitx/issues"
  },
  "homepage": "https://github.com/princechrix/permitx#readme"
}